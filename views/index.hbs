<div class="container py-5">
  <div class="row">
    <div class="col-8 mx-auto">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title fw-bold">Random Password Generator
            <i class="fa-solid fa-key"></i></h5>
          <hr />
          <form action="/generate" method="POST">
            <div class="form-group form-row d-flex">
              <label for="length" class="col-md-4 col-form-label fw-bold">
                Password Length
              </label>
              <div class="col-md-8">
                <input
                  type="number"
                  name="length"
                  class="form-control"
                  id="Length"
                  min="4"
                  max="16"
                  value={{options.length}}
                />
                <small style="color:gray">Length is availabe between 4 ~ 16</small>
              </div>
            </div>

            <div class="form-group form-row mb-2 d-flex align-items-center">
              <label for="lowercase" class="col-md-4 col-form-label fw-bold">Include
                Lowercase Characters</label>
              <div class="col-md-8">
                <div class="form-check form-switch">
                  <input
                    class="form-check-input"
                    type="checkbox"
                    id="lowercase"
                    name="lowercase"
                    {{#if options.lowercase}}checked{{/if}}
                  />
                  <label for="lowercase" class="form-check-label fw-bold">(e.g. abcdefg)</label>
                </div>
              </div>
            </div>

            <div class="form-group form-row mb-2 d-flex align-items-center">
              <label for="uppercase" class="col-md-4 col-form-label fw-bold">Include
                Uppercase Characters</label>
              <div class="col-md-8">
                <div class="form-check form-switch">
                  <input
                    class="form-check-input"
                    type="checkbox"
                    id="uppercase"
                    name="uppercase"
                    {{#if options.uppercase}}checked{{/if}}
                  />
                  <label for="uppercase" class="form-check-label fw-bold">(e.g. ABCDEFG)</label>
                </div>
              </div>
            </div>

            <div class="form-group form-row mb-2 d-flex align-items-center">
              <label for="numbers" class="col-md-4 col-form-label fw-bold">Include
                Numbers</label>
              <div class="col-md-8">
                <div class="form-check form-switch">
                  <input
                    class="form-check-input"
                    type="checkbox"
                    id="numbers"
                    name="numbers"
                    {{#if options.numbers}}checked{{/if}}
                  />
                  <label for="numbers" class="form-check-label fw-bold">(e.g. 123456)</label>
                </div>
              </div>
            </div>

            <div class="form-group form-row mb-2 d-flex align-items-center">
              <label for="symbols" class="col-md-4 col-form-label fw-bold">Include
                Symbols</label>
              <div class="col-md-8">
                <div class="form-check form-switch">
                  <input
                    class="form-check-input"
                    type="checkbox"
                    id="symbols"
                    name="symbols"
                    {{#if options.symbols}}checked{{/if}}
                  />
                  <label for="symbols" class="form-check-label fw-bold">(e.g. @#$%)</label>
                </div>
              </div>
            </div>

            <div class="form-group form-row mb-2 d-flex">
              <label for="excludeCharacters" class="col-md-4 col-form-label fw-bold">
                Exclude Characters
              </label>
              <div class="col-md-8">
                <input
                  type="text"
                  name="excludeCharacters"
                  class="form-control"
                  id="excludeCharacters"
                  value={{options.excludeCharacters}}
                >
                <small style="color:gray">These characters will not appear in
                  the password</small>
              </div>
            </div>

            {{#if password}}
              <div class="alert alert-info" role="alert">
                <span class="mr-2">Your password is:</span>
                <code>{{password}}</code>
              </div>
            {{/if}}

            <button class="btn btn-success" type="submit">Generate Password</button>

          </form>
        </div>

        <small class="card-footer text-muted text-end">
          Idea is inspired by
          <a href="https://passwordsgenerator.net/" target="_blank">Strong
            Random Password</a>
        </small>
      </div>
    </div>
  </div>
</div>